<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.montrosesoftware.User" table="hbm.Users">
        <id name="id" type="integer">
            <column name="id" />
        </id>

        <property name="name" type="string" length="100" column="name"/>
        <property name="createdAt" type="com.montrosesoftware.types.UtcDateType" column="created_at"/>
        <property name="updatedAt" type="com.montrosesoftware.types.UtcDateType" column="updated_at"/>
        <property name="lastLoggedAt" type="com.montrosesoftware.types.UtcDateType" column="last_logged_at"/>

    </class>
</hibernate-mapping>